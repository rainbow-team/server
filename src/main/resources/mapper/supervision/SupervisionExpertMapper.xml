  </resultMap>

  <select id="getExpertList" parameterType="map" resultMap="BaseResultMap">

    select  * from supervision_expert t
    where 1=1

    <if test="name != null and name != ''">
      and instr(t.name,#{name})>0
    </if>

    <if test="major != null and major != ''">
      and instr(t.major,#{major})>0
    </if>

    <if test="age != null and age != ''">
      and t.age <![CDATA[  =  ]]> #{age}
    </if>

  </select>

</mapper>