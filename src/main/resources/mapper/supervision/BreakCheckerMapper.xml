    <result column="modify_id" jdbcType="VARCHAR" property="modifyId" />
    <result column="modify_date" jdbcType="TIMESTAMP" property="modifyDate" />
    <result column="note" jdbcType="LONGVARCHAR" property="note" />
  </resultMap>

  <select id="getBreakCheckerList" parameterType="map" resultMap="BaseResultMap">

    select  * from supervision_break_checker t
    where 1=1

    <if test="name != null and name != ''">
      and instr(t.name,#{name})>0
    </if>

    <if test="check_method_id != null and check_method_id != ''">
      and t.check_method_id = #{check_method_id}
    </if>

    <if test="check_level_id != null and check_level_id != ''">
      and t.check_level_id = #{check_level_id}
    </if>

    <if test="employ_depart != null and employ_depart != ''">
      and instr(t.employ_depart,#{employ_depart})>0
    </if>

    <if test="valid_date != null and valid_date != ''">
      and t.valid_date <![CDATA[  <=  ]]> #{valid_date}
    </if>

    <if test="cert_number != null and cert_number != ''">
      and instr(t.cert_number,#{cert_number})>0
    </if>

  </select>
</mapper>